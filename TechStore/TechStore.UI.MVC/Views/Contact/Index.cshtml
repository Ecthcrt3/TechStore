@model TechStore.UI.MVC.Models.ContactViewModel

@{
    ViewData["Title"] = "Contact Us";
}

@section hero{


<!-- Header-->
<header class="bg-dark py-2">
    <div class="container px-4 px-lg-5 my-3">
        <div class="text-center text-white">
            <h1 class="display-4 fw-bolder">Contact us</h1>
            <h4>We would love to hear from you!</h4>
        </div>
    </div>
</header>
}

<div class="row">
    <form asp-action="Index">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group m-3">
            <input asp-for="Name" class="form-control" placeholder="Name:" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group m-3">
            <input asp-for="Email" class="form-control" placeholder="Email:" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group m-3">
            <input asp-for="Subject" class="form-control" placeholder="Subject:" />
            <span asp-validation-for="Subject" class="text-danger"></span>
        </div>
        <div class="form-group m-3">
            <textarea asp-for="Message" rows="6" class="form-control" placeholder="Enter Message Here:"></textarea>
            <span asp-validation-for="Message" class="text-danger"></span>
        </div>
        <div class="form-group m-3 text-center">
            <input type="submit" value="Send Message" class="btn btn-dark my-2" />
        </div>
    </form>
</div>
</div>

